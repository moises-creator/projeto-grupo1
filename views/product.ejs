<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Novo Produto</title>
</head>
<body>
    <header>
        <a href="/">Home</a>
        <a href="/product">Cadastrar Produto</a>
    </header>
    <main>
        <h1>Cadastro de Produto</h1>
        <div>
            <h3>Formulário de cadastro</h3>
            <form action="" method="post" enctype="multipart/form-data">
                <div>
                    <label for="name" class="">Nome do produto</label>
                    <input name="name" id="name" type="text">
                </div>
                <div>
                    <label for="price" class="">Preço</label>
                    <input name="price" id="price" type="number">
                </div>
                <div class="">
                    <div>
                      <label class="form-label">Tipo de produto:</label>
                    </div>
                        <div class="">          
                    <% types.forEach(function(type) {%>
                            <input type="radio" name="type" id="<%= type.id %>" class="" value="<%= type.id %>" />
                            <label for="<%= type.id %>" class=""> <%= type.label %> </label>
                    <%}) %>
                        </div>
                </div>
                <div>
                    <p>Foto do produto:</p>
                    <input type="file" name="photo" id="">
                </div>
                <button type="submit">Cadastrar</button>
                <button type="reset">Resetar</button>

            </form>
        </div>

        <div>
            <h3>Lista de Produtos</h3>
            <div>
                
                    <div>
                        <% const productsList = JSON.parse(products); %>
                        <% productsList.forEach(function(item) {%>
                            <p> <%= item.name %> </p>
                            <img <%= "src=images/uploads/" + item.photo %> >
                        <%}) %>
                    </div>
                
            </div>
        </div>
    </main>
</body>
</html>